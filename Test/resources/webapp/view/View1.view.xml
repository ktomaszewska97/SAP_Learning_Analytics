<mvc:View 
controllerName="Test.Test.controller.View1" 
xmlns:mvc="sap.ui.core.mvc" 
displayBlock="true" 
xmlns:core="sap.ui.core"
xmlns="sap.m"
height="100%">
	<Shell id="shell">
		<App id="app">
			<pages>
				<Page id="page" title="{i18n>Employees}">
					<content>
					<Toolbar>
					<Title level="H3" text="Filters:" />
					<ToolbarSpacer />
				    </Toolbar>
						<Select
						text ="Company"
						enabled="{/Enabled}"
						editable="{/Editable}"
						forceSelection="false"
					    selectedKey="{/SelectedProduct1}"
						items="{
							path: '/Company',
							sorter: { path: 'Name' }
						}">
					<core:Item key="{ProductId}" text="{Name}" />
				    </Select>
				    <Select
						text ="Business Unit"
						enabled="{/Enabled}"
						editable="{/Editable}"
						forceSelection="false"
					    selectedKey="{/SelectedProduct2}"
						items="{
							path: '/BusinessUnit',
							sorter: { path: 'Name' }
						}">
					<core:Item key="{ProductId}" text="{Name}" />
				    </Select>
				    <Select
						text ="Team"
						enabled="{/Enabled}"
						editable="{/Editable}"
						forceSelection="false"
					    selectedKey="{/SelectedProduct3}"
						items="{
							path: '/Team',
							sorter: { path: 'Name' }
						}">
					<core:Item key="{ProductId}" text="{Name}" />
				    </Select>
				    <Select
						text ="Active or Inactive"
						enabled="{/Enabled}"
						editable="{/Editable}"
						forceSelection="false"
					    selectedKey="{/SelectedProduct4}"
						items="{
							path: '/ActiveInactive',
							sorter: { path: 'Name' }
						}">
					<core:Item key="{ProductId}" text="{Name}" />
				    </Select>
			        <Toolbar>
					<Title level="H3" text="Hours spent:" />
					<ToolbarSpacer />
				    </Toolbar>
			         <Toolbar>
					<Title level="H3" text="Courses assigned/enrolled/completed:" />
					<ToolbarSpacer />
				    </Toolbar>
			        <Toolbar>
					<Title level="H3" text="Learning Paths assigned/enrolled/completed:" />
					<ToolbarSpacer />
				    </Toolbar>
			         <Toolbar>
					<Title level="H3" text="Top courses:" />
					<ToolbarSpacer />
				    </Toolbar>
			         <Toolbar>
					<Title level="H3" text="Top course categories:" />
					<ToolbarSpacer/>
				    </Toolbar>
			         <Toolbar>
					<Title level="H3" text="Level of enrolled courses:" />
					<ToolbarSpacer/>
				    </Toolbar>
			         <Toolbar>
					<Title level="H3" text="Table of Employees:" />
					<ToolbarSpacer />
				    </Toolbar>
				    <SearchField width="90%" class="sapUiSmallMargin" />
					</content>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>