<mvc:View 
controllerName="Test.Test.controller.View1" 
xmlns:mvc="sap.ui.core.mvc" 
displayBlock="true" 
xmlns:core="sap.ui.core"
xmlns="sap.m"
xmlns:tnt="sap.tnt"
xmlns:l="sap.ui.layout"
height="100%">
	<Shell id="shell">
		<App id="app">
			<pages>
			<Page title="Title">		
		<customHeader>
		<Bar>
		<contentLeft>
		<Title level="H1" text = "Employees:" />
		</contentLeft>
		<contentRight>
		<Button text="Menu" type="Accept"></Button>
		</contentRight>
		</Bar>
		</customHeader>
					<content>
	
					<Toolbar>
					<Title level="H2" text="Filters:" width="100%" />
					<ToolbarSpacer />
				    </Toolbar>
				    <Title level="H3" text="Company:" width="20%"/>
				     <Title level="H3" text="Business Unit:"  width="20%" />
				     <Title level="H3" text="Team:"  width="20%" />
				     <Title level="H3" text="Active or Inactive:"  width="20%" />
				     <Title level="H3" text="Time Range:"  width="20%" />
						<Select
						data-placeholder="Company:"
						text ="Company"
						enabled="{/Enabled}"
						editable="{/Editable}"
						forceSelection="false"
						width="20%"
						valueStateText="Company"
					    selectedKey="{/SelectedProduct1}"
						items="{
							path: '/Company',
							sorter: { path: 'Name' }
						}">
					<core:Item key="{ProductId}" text="{Name}" />
				    </Select>
				    <Select
						text ="Business Unit"
						enabled="{/Enabled}"
						editable="{/Editable}"
						forceSelection="false"
						width="20%"
					    selectedKey="{/SelectedProduct2}"
						items="{
							path: '/BusinessUnit',
							sorter: { path: 'Name' }
						}">
					<core:Item key="{ProductId}" text="{Name}" />
				    </Select>
				    
				    <Select
						text ="Team"
						enabled="{/Enabled}"
						editable="{/Editable}"
						forceSelection="false"
							width="20%"
					    selectedKey="{/SelectedProduct3}"
						items="{
							path: '/Team',
							sorter: { path: 'Name' }
						}">
					<core:Item key="{ProductId}" text="{Name}" />
				    </Select>
				    
				    <Select
						text ="Active or Inactive"
						enabled="{/Enabled}"
						editable="{/Editable}"
						forceSelection="false"
							width="20%"
					    selectedKey="{/SelectedProduct4}"
						items="{
							path: '/ActiveInactive',
							sorter: { path: 'Name' }
						}">
					<core:Item key="{ProductId}" text="{Name}" />
				    </Select>
				    
				    <DateRangeSelection
				    	width="20%"
		         	id="DRS2"
			        change="handleChange"/>
		<IconTabHeader mode="Inline">
		<items>
		<IconTabFilter key="info" text="Info" />
			<IconTabFilter key="attachments" text="Attachments" count="3" />
			<IconTabFilter key="notes" text="Notes" count="12" />
			<IconTabFilter key="people" text="People"/>
		</items>
	</IconTabHeader>
			        <Toolbar>
					<Title level="H3" text="Hours spent:" />
					<ToolbarSpacer />
				    </Toolbar>
			         <Toolbar>
					<Title level="H3" text="Courses assigned/enrolled/completed:" />
					<ToolbarSpacer />
				    </Toolbar>
			        <Toolbar>
					<Title level="H3" text="Learning Paths assigned/enrolled/completed:" />
					<ToolbarSpacer />
				    </Toolbar>
			         <Toolbar>
					<Title level="H3" text="Top courses:" />
					<ToolbarSpacer />
				    </Toolbar>
			         <Toolbar>
					<Title level="H3" text="Top course categories:" />
					<ToolbarSpacer/>
				    </Toolbar>
			         <Toolbar>
					<Title level="H3" text="Level of enrolled courses:" />
					<ToolbarSpacer/>
				    </Toolbar>
			         <Toolbar>
					<Title level="H3" text="Table of Employees:" />
					<ToolbarSpacer />
				    </Toolbar>
				    <SearchField width="90%" class="sapUiSmallMargin" />
					</content>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>