<mvc:View controllerName="test.Courses1.controller.singleperson"
xmlns:mvc="sap.ui.core.mvc"
xmlns:c="sap.ui.core"
displayBlock="true" 
xmlns:t="sap.ui.table"
xmlns:f="sap.ui.layout.form"
xmlns="sap.m">
	<Shell id="shell">
		<App id="app">
			<pages>
				<Page id="page" title="Learning Platform Analytics" class="sapUiContentPadding sapUiResponsivePadding--header sapUiResponsivePadding--subHeader sapUiResponsivePadding--content sapUiResponsivePadding--footer" showNavButton="true">
					<!--navbar-->
					<headerContent>
						<MenuButton text="Menu">
							<menu>
	<Menu>
									<MenuItem text="Dashboard" press="onPressDashboard"></MenuItem>
									<MenuItem text="Learning History" press="onPressHistory" />
									<MenuItem text="People Overview" press="onPressPeople"/>
									
									<MenuItem text="Courses Overview" press="onPressCourses" />
									<MenuItem text="Test Single Course" press="onPressSingleCourse"/>
									<MenuItem text="Test Single Person" press="onPressSinglePerson"/>
									
								</Menu>
							</menu>
						</MenuButton>
					</headerContent>
					
					
					<!--<Toolbar>-->
					<!--<Title level="H3" text="Anna Foster" />-->
					<!--<ToolbarSpacer />-->
				 <!--   </Toolbar>	-->
				    
				    
					<content>
						<!--user profile-->
					<f:SimpleForm id="SimpleFormDisplay480"
					minWidth="1024"
					maxContainerCols="2"
					editable="false"
					layout="ResponsiveGridLayout"
					
					title="Anna Foster" 
					
					labelSpanL="4"
					labelSpanM="4"
					emptySpanL="0"
					emptySpanM="0"
					columnsL="2"
					columnsM="2">
					<f:content>
						<c:Title text="Personal Information" />
						<Label text="Name" />
						<Text text="Anna Foster" />
						<Label text="User ID" />
						<Text text="1618" />
						<Label text="Company" />
						<Text text="Germany XXX" />
						<Label text="Business Unit" />
						<Text text="Marketing" />
						<c:Title text=" " />
						<Label text="Position" />
						<Text text="Marketing Department header" />
						<Label text="Email" />
						<Text text="anna@gmail.com" />
					</f:content>
					<f:layoutData>
						<FlexItemData shrinkFactor="0" backgroundDesign="Solid" styleClass="sapContrastPlus"/>
					</f:layoutData>
				</f:SimpleForm>
					
						
						<!--table	-->
							<Table id="productsTable"
							items="{/ProductCollection}"
							headerText="Learning Progress">
								<columns>
									<Column id="courseCol" width="12em"><Text text="Courses" /></Column>
									<Column id="progressCol" minScreenWidth="Tablet" demandPopin="true"><Text text="Progress" /></Column>
									<Column id="deadlineCol" minScreenWidth="Tablet" demandPopin="true"><Text text="Deadline" /></Column>
									<Column id="timeCol" minScreenWidth="Tablet" demandPopin="true" hAlign="End"><Text text="DueTime" /></Column>
								</columns>
								<items>
									<ColumnListItem
									type="Active"
									vAlign="Middle"
									navigated="{
									parts: [
									'settings>/navigatedItem',
									'ProductId'
									],
									formatter: '.isNavigated'
									}"
									press="onPress">
										<cells>
											<ObjectIdentifier title="{Name}" text="{coursetId}" />
											<Text text="{SupplierName}" />
											<Text text="{SupplierName}" />
											<Text text="{SupplierName}" />
											<Text text="{Width} x {Depth} x {Height} {DimUnit}" />
										</cells>
									</ColumnListItem>
								</items>
							</Table>
					
						
					</content>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>