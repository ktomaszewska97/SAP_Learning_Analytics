						<SearchField width="95%" class="sapUiSmallMargin" />
						<Table id="coursesTable"
							items="{/ProductCollection}"
							>
								<columns>
									<Column id="courseName" width="25%"><Text text="Course" /></Column>
									<Column id="courseCateg" width="25%" demandPopin="true"><Text text="Course Category" /></Column>
									<Column id="numbPart" width="10%" demandPopin="true"><Text text="Number of Participants" /></Column>
									<Column id="avgHours" width="10%" demandPopin="true"><Text text="Average hours spent" /></Column>
