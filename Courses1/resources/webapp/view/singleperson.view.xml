						<Label text="Team" />
						<Text text="{}" />
						<Label text="Hours spent" />
						<Text text="{num_video_consumed_minutes}" />
						<c:Title text=" " />
						<Label text="Course assigned" />
						<Text text="{num_new_assigned_courses}" />
						<Label text="Courses completed" />
						<Text text="{num_completed_courses}" />
						<Label text="LP assigned" />
						<Text text="{LP_assigned}" />
						<Label text="LP completed" />
						<Text text="{LP_completed}" />
						
					</f:content>
					
					<f:layoutData>
						<FlexItemData shrinkFactor="0" backgroundDesign="Solid" styleClass="sapContrastPlus"/>
					</f:layoutData>
				</f:SimpleForm>
					
						
