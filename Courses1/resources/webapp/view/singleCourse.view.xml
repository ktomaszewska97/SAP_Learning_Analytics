<mvc:View controllerName="test.Courses1.controller.singleCourse"
xmlns:mvc="sap.ui.core.mvc"
xmlns:c="sap.ui.core"
displayBlock="true" 
xmlns:t="sap.ui.table"
xmlns:f="sap.ui.layout.form"
xmlns:core="sap.ui.core"
xmlns:ux="sap.uxap"
xmlns:m="sap.m"
xmlns="sap.m">
	
	<Shell id="shell">
		<App id="app" class="myApp">
			<pages>
				
<!--Section 1 Header-->
<!--Function 1.1 Title-->
				<Page id="page" title="Learning Platform Analytics" class="sapMShellGlobalOuterBackground sapUiContentPadding sapUiResponsivePadding--header sapUiResponsivePadding--subHeader sapUiResponsivePadding--content 
				sapUiResponsivePadding--footer" showNavButton="false">
<!--Function 1.2 Logo-->
					<headerContent>
						<!--logo added-->
						<core:Icon src="sap-icon://customfont/cool" size="20px"></core:Icon>
						<HBox>
<!--Function 1.3 Menu Button-->
						<!--menu button-->
						<MenuButton text="Menu">
							<menu>
									<Menu>
									<MenuItem text="Dashboard" press="onPressDashboard"></MenuItem>
									<MenuItem text="Learning History" press="onPressHistory" />
									<MenuItem text="People Overview" press="onPressPeople"/>
									
									<MenuItem text="Courses Overview" press="onPressCourses" />
									<MenuItem text="Test Single Course" press="onPressSingleCourse"/>
									<MenuItem text="Test Single Person" press="onPressSinglePerson"/>
									
								</Menu>
							</menu>
						</MenuButton>
						</HBox>
						
					</headerContent>
<!--Section 2 Content-->

					<content>
						<!--user profile-->
<!--Function 2.1 Course Information-->
					<f:SimpleForm id="SimpleFormDisplay480"
					minWidth="1024"
					maxContainerCols="2"
					editable="false"
					layout="ResponsiveGridLayout"
					
					title="{course_name}"
					
					labelSpanL="4"
					labelSpanM="4"
					emptySpanL="0"
					emptySpanM="0"
					columnsL="2"
					columnsM="2">
				
					<f:content>
						<c:Title text="Course Information:" />
						<Label text="Course Category" />
						<Text text="{course_category}" />
						<Label text="Number of Participants" />
						<Text text="{}" />
						<Label text="Course duration" />
						<Text text="{course_duration}" />
						<c:Title text=" " />
						<Label text="Rating" />
						<Text text="{}" />
						<Label text="Learning Platform" />
						<Text text="{}" />
					</f:content>
			
					<f:layoutData>
						<FlexItemData shrinkFactor="0" backgroundDesign="Solid" styleClass="sapContrastPlus"/>
					</f:layoutData>
				</f:SimpleForm>
<!--Function 2.2 Sections-->
					<!--sections-->
					<ux:ObjectPageLayout id="ObjectPageLayout" upperCaseAnchorBar="false">
					<ux:headerTitle>
						<ux:ObjectPageHeader objectTitle="Statistics Visulization">
						</ux:ObjectPageHeader>
					</ux:headerTitle>
					
					<ux:headerContent>
						<m:ObjectAttribute title="" text="charts"/>
					</ux:headerContent>
					
					<ux:sections>
						<ux:ObjectPageSection titleUppercase="false" title="Important KPIs">
							
						<ux:subSections>
								<ux:ObjectPageSubSection title="TOP Users Global" titleUppercase="false">
									<ux:blocks>
									<m:ObjectAttribute title="" text="chart"/>	
									<!--	<blockcolor:BlockBlueT1 id="bbt1"/>-->
									</ux:blocks>
								</ux:ObjectPageSubSection>
								
								<ux:ObjectPageSubSection title="TOP Courses Global" titleUppercase="false">
									<ux:blocks>
									<!--	<blockcolor:BlockBlueT2 id="bbt2"/>-->
									<m:ObjectAttribute title="" text="chart"/>
									</ux:blocks>
								</ux:ObjectPageSubSection>
						</ux:subSections>
						
						</ux:ObjectPageSection>
						
						<ux:ObjectPageSection titleUppercase="false" title="Grafik 2">
							
						</ux:ObjectPageSection>
						
						
						<ux:ObjectPageSection titleUppercase="false" title="avg. Time spent on learning Global">
							<ux:subSections>
								<ux:ObjectPageSubSection titleUppercase="false">
									<ux:blocks>
									<!--<blockcolor:BlockBlueT3 id="bbt3"/>-->
									<m:ObjectAttribute title="" text="chart"/>
									</ux:blocks>
							    </ux:ObjectPageSubSection>
							</ux:subSections>
						</ux:ObjectPageSection>
					</ux:sections>
				</ux:ObjectPageLayout>
<!--Function 2.3 SearchField-->
					<Toolbar>
						<Title level="H3" text="Table of Participants:" />
					<ToolbarSpacer />
				    </Toolbar>
				    <SearchField width="95%" class="sapUiSmallMargin" />
						<!--table	-->
<!--Function 2.4 Table-->
							<Table id="productsTable"
							items="{/ProductCollection}"
							>
								<columns>
									<Column id="name" width="25%"><Text text="Name" /></Column>
									<Column id="hoursSpent" width="25%" demandPopin="true"><Text text="Hours Spent" /></Column>
									<Column id="progress" width="25%" demandPopin="true"><Text text="Progress" /></Column>
									<Column id="examRate" width="25%" demandPopin="true"><Text text="Exam Rate" /></Column>
								</columns>
								<items>
									<ColumnListItem
									type="Active"
									vAlign="Middle"
									navigated="{
									parts: [
									'settings>/navigatedItem',
									'ProductId'
									],
									formatter: '.isNavigated'
									}"
									press="onPress">
										<cells>
											<ObjectIdentifier title="{Name}" text="{coursetId}" />
											<Text text="{SupplierName}" />
											<Text text="{SupplierName}" />
											<Text text="{SupplierName}" />
											<Text text="{Width} x {Depth} x {Height} {DimUnit}" />
										</cells>
									</ColumnListItem>
								</items>
							</Table>
							
					
					
						
					</content>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>