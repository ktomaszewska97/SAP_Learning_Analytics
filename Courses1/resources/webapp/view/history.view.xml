<mvc:View controllerName="test.Courses1.controller.history" 
xmlns:mvc="sap.ui.core.mvc"
xmlns:l="sap.ui.layout"
class="viewPadding"
xmlns:core="sap.ui.core"
xmlns:u="sap.ui.unified"
xmlns:ux="sap.uxap"
xmlns:m="sap.m"
displayBlock="true" 
xmlns="sap.m">
	
	<Shell id="shell">
		<App id="app" class="myApp">
			
			<pages>
				<Page id="page" title="Learning History" class="sapMShellGlobalOuterBackground sapUiContentPadding sapUiResponsivePadding--header sapUiResponsivePadding--subHeader sapUiResponsivePadding--content sapUiResponsivePadding--footer" 
				showNavButton="false">
					
					<!--menu button-->
					
					<headerContent>
						<!--logo added-->
						<core:Icon src="sap-icon://customfont/cool" size="20px"></core:Icon>
						<HBox>
						<!--menu button-->
						<MenuButton text="Menu">
							<menu>
									<Menu>
									<MenuItem text="Dashboard" press="onPressDashboard"></MenuItem>
									<MenuItem text="Learning History" press="onPressHistory" />
									<MenuItem text="People Overview" press="onPressPeople"/>
									
									<MenuItem text="Courses Overview" press="onPressCourses" />
									<MenuItem text="Test Single Course" press="onPressSingleCourse"/>
									<MenuItem text="Test Single Person" press="onPressSinglePerson"/>
									
								</Menu>
							</menu>
						</MenuButton>
						</HBox>
						
					</headerContent>
					
					
					
					<Toolbar>
					<Title level="H2" text="Learning History" />
					<ToolbarSpacer />
				    </Toolbar>	
					
					
					<!--content-->
					<content>
					
				
					
					<l:VerticalLayout>
						
						<!--<Title-->
						<!--	level="H3"-->
						<!--	titleStyle="H3"-->
						<!--	text="Hello Jane, here is your information:"-->
						<!--class="sapUiMediumMarginTopBottom sapUiSmallMarginBegin"/>-->
					<!--<Toolbar>-->
					
					
					<Panel headerText="Hello Jane, here is your information:">
						<Title text="Time spent on learning: 115"/>
					<!--</Panel>	-->
					<!--<Panel headerText="">-->
					<!--</Panel>-->
					
					
						<!--<Title text="Time spent on learning:"/>-->
						<!--<NumericContent value="115" scale="h"-->
						<!-- class="sapUiSmallMargin" press="press" />	-->
							
						
						<!--calendar-->
				
					
						<!--<Panel headerText="Num. of hours spent on learning: 115">-->
						
						<VBox class="sapUiSmallMargin">
	
								<items>
								<u:CalendarDateInterval
								id="calendar"
								width="320px"
								select="handleCalendarSelect"/>
								</items>
							
						</VBox>
						
						
					</Panel>
					
					</l:VerticalLayout>
					
					<!--sections-->
					<ux:ObjectPageLayout id="ObjectPageLayout" upperCaseAnchorBar="false">
					<ux:headerTitle>
						<ux:ObjectPageHeader objectTitle="Statistics Visulization">
						</ux:ObjectPageHeader>
					</ux:headerTitle>
					
					<ux:headerContent>
						<m:ObjectAttribute title="" text="charts"/>
					</ux:headerContent>
					
					<ux:sections>
						<ux:ObjectPageSection titleUppercase="false" title="Important KPIs">
							
						<ux:subSections>
								<ux:ObjectPageSubSection title="TOP Users Global" titleUppercase="false">
									<ux:blocks>
									<m:ObjectAttribute title="" text="chart"/>	
									<!--	<blockcolor:BlockBlueT1 id="bbt1"/>-->
									</ux:blocks>
								</ux:ObjectPageSubSection>
								
								<ux:ObjectPageSubSection title="TOP Courses Global" titleUppercase="false">
									<ux:blocks>
									<!--	<blockcolor:BlockBlueT2 id="bbt2"/>-->
									<m:ObjectAttribute title="" text="chart"/>
									</ux:blocks>
								</ux:ObjectPageSubSection>
						</ux:subSections>
						
						</ux:ObjectPageSection>
						
						<ux:ObjectPageSection titleUppercase="false" title="Grafik 2">
							
						</ux:ObjectPageSection>
						
						
						<ux:ObjectPageSection titleUppercase="false" title="avg. Time spent on learning Global">
							<ux:subSections>
								<ux:ObjectPageSubSection titleUppercase="false">
									<ux:blocks>
									<!--<blockcolor:BlockBlueT3 id="bbt3"/>-->
									<m:ObjectAttribute title="" text="chart"/>
									</ux:blocks>
							    </ux:ObjectPageSubSection>
							</ux:subSections>
						</ux:ObjectPageSection>
					</ux:sections>
				</ux:ObjectPageLayout>
					
				
					</content>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>
