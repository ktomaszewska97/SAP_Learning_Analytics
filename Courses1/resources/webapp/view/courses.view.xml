<mvc:View controllerName="test.Courses1.controller.courses"
xmlns:mvc="sap.ui.core.mvc" 
xmlns:fb="sap.ui.comp.filterbar"
xmlns:l="sap.ui.layout"
xmlns:f="sap.ui.layout.form"
xmlns:core="sap.ui.core"
xmlns:ux="sap.uxap"
xmlns:m="sap.m"
displayBlock="true" 
xmlns="sap.m">
	
	<Shell id="shell">
		<!--myApp comes from the style.css-->
		<App id="app" class="myApp">
			<pages>
				<!--navigation bar-->
				<Page id="courses" title="Courses" class="sapMShellGlobalOuterBackground sapUiContentPadding sapUiResponsivePadding--header sapUiResponsivePadding--subHeader sapUiResponsivePadding--content sapUiResponsivePadding--footer"
		showNavButton="false">
					
				<!--menu button-->
					
					<headerContent>
						<!--logo added-->
						<core:Icon src="sap-icon://customfont/cool" size="20px"></core:Icon>
						<HBox>
						<!--menu button-->
						<MenuButton text="Menu">
							<menu>
									<Menu>
									<MenuItem text="Dashboard" press="onPressDashboard"></MenuItem>
									<MenuItem text="Learning History" press="onPressHistory" />
									<MenuItem text="People Overview" press="onPressPeople"/>
									
									<MenuItem text="Courses Overview" press="onPressCourses" />
									<MenuItem text="Test Single Course" press="onPressSingleCourse"/>
									<MenuItem text="Test Single Person" press="onPressSinglePerson"/>
									
								</Menu>
							</menu>
						</MenuButton>
						</HBox>
						
					</headerContent>
					
					
					
					<content>
					<!--subtitle-->
					
					<!--filter apply	-->
					<l:VerticalLayout width="100%">
						<!--<Label text="Filters"/>-->
						<fb:FilterBar reset="onReset" search="onSearch" showRestoreButton="true" showClearButton="true" title="Filters:">
							<fb:filterGroupItems>
								<!--larning platform selection-->
								<fb:FilterGroupItem groupName="__$INTERNAL$" name="LP" label="Learning Platform" visibleInFilterBar="true">
									<fb:control>
										<ComboBox type="Text">
											<items>
												<core:Item key="udemy" text="Udemyy"/>
												<core:Item key="litmos" text="SAP Litmos"/>
												
											</items>
										</ComboBox>
									</fb:control>
								</fb:FilterGroupItem>
								
								<!--course category selection-->
								<fb:FilterGroupItem groupName="__$INTERNAL$" name="cc" label="Course Category" visibleInFilterBar="true">
									<fb:control>
										<ComboBox type="Text">
											<items>
												<core:Item key="marketing" text="Marketing"/>
												<core:Item key="hr" text="Soft Skills"/>
												<core:Item key="it" text="IT"/>
											</items>
										</ComboBox>
									
								    </fb:control>
								</fb:FilterGroupItem>
								
	
								<!--rating selection-->
								<fb:FilterGroupItem groupName="G1" groupTitle="Group1" name="rating" label="Rating" visibleInFilterBar="true">
									<fb:control>
										<ComboBox type="Text">
											<items>
												<core:Item key="t1" text=">4,5"/>
												<core:Item key="t2" text=">4"/>
												<core:Item key="t3" text=">3,5"/>
											</items>
										</ComboBox>
					                </fb:control>
				                </fb:FilterGroupItem>
				                <!--level selection-->
				                <fb:FilterGroupItem groupName="G1" groupTitle="Group1" name="level" label="Level" visibleInFilterBar="true">
									<fb:control>
										<ComboBox type="Text">
											<items>
												<core:Item key="t1" text="Beginner"/>
												<core:Item key="t2" text="Intermediate"/>
												<core:Item key="t1" text="Expert"/>
											</items>
										</ComboBox>
					                </fb:control>
				                </fb:FilterGroupItem>
				                <!--compliance selection-->
				                <fb:FilterGroupItem groupName="G1" groupTitle="Group1" name="compliance" label="Compliance" visibleInFilterBar="true">
									<fb:control>
										<ComboBox type="Text">
											<items>
												<core:Item key="t1" text="yes"/>
												<core:Item key="t2" text="no"/>
											</items>
										</ComboBox>
					                </fb:control>
				                </fb:FilterGroupItem>
				                <!--date range selection-->
				                <fb:FilterGroupItem groupName="G1" groupTitle="Group1" name="date" label="Date Range" visibleInFilterBar="true">
									<fb:control>
										<!--date range selection-->
									<Label labelFor="DRS2"/>
							            <DateRangeSelection id="date" change="handleChange"/>
					                </fb:control>
				                </fb:FilterGroupItem>
								
							</fb:filterGroupItems>
						</fb:FilterBar>
						
					</l:VerticalLayout>
					
					<!--sections-->
					<ux:ObjectPageLayout id="ObjectPageLayout" upperCaseAnchorBar="false">
					<ux:headerTitle>
						<ux:ObjectPageHeader objectTitle="Statistics Visulization">
						</ux:ObjectPageHeader>
					</ux:headerTitle>
					
					<ux:headerContent>
						<m:ObjectAttribute title="" text="charts"/>
					</ux:headerContent>
					
					<ux:sections>
						<ux:ObjectPageSection titleUppercase="false" title="Important KPIs">
							
						<ux:subSections>
								<ux:ObjectPageSubSection title="TOP Users Global" titleUppercase="false">
									<ux:blocks>
									<m:ObjectAttribute title="" text="chart"/>	
									<!--	<blockcolor:BlockBlueT1 id="bbt1"/>-->
									</ux:blocks>
								</ux:ObjectPageSubSection>
								
								<ux:ObjectPageSubSection title="TOP Courses Global" titleUppercase="false">
									<ux:blocks>
									<!--	<blockcolor:BlockBlueT2 id="bbt2"/>-->
									<m:ObjectAttribute title="" text="chart"/>
									</ux:blocks>
								</ux:ObjectPageSubSection>
						</ux:subSections>
						
						</ux:ObjectPageSection>
						
						<ux:ObjectPageSection titleUppercase="false" title="Grafik 2">
							
						</ux:ObjectPageSection>
						
						
						<ux:ObjectPageSection titleUppercase="false" title="avg. Time spent on learning Global">
							<ux:subSections>
								<ux:ObjectPageSubSection titleUppercase="false">
									<ux:blocks>
									<!--<blockcolor:BlockBlueT3 id="bbt3"/>-->
									<m:ObjectAttribute title="" text="chart"/>
									</ux:blocks>
							    </ux:ObjectPageSubSection>
							</ux:subSections>
						</ux:ObjectPageSection>
					</ux:sections>
				</ux:ObjectPageLayout>
					
					<!--table-->
				    <Toolbar>
					<Title level="H3" text="Table of Courses:" />
					<ToolbarSpacer />
				    </Toolbar>
				    
				    <SearchField width="95%" liveChange=".onFilterPosts" class="sapUiSmallMargin"/>
				    <!--table here-->
						<Table id="copyofuser"
							items="{/CopyOfuser}"
							>
								<columns>
									<Column id="courseName" width="25%"><Text text="Course" /></Column>
									<Column id="courseCateg" width="25%" demandPopin="true"><Text text="Course Category" /></Column>
									<Column id="numbPart" width="10%" demandPopin="true"><Text text="Number of Participants" /></Column>
									<Column id="avgHours" width="10%" demandPopin="true"><Text text="Average hours spent" /></Column>
									<Column id="rating" width="10%" demandPopin="true"><Text text="Rating" /></Column>
									<Column id="avgProg" width="10%" demandPopin="true"><Text text="Average Progress" /></Column>
								    <Column id="avgExamRate" width="10%" demandPopin="true"><Text text="Average Exam Rate" /></Column>
								</columns>
								<items>
									<ColumnListItem>
										<cells>
											<!--<ObjectIdentifier title="{copyofuser}" text="{copyofuser}" />-->
											<Text text="{email_address}" />
											<Text text="{email_address}" />
											<Text text="{email_address}" />
											<Text text="{email_address}" />
											<Text text="{email_address}" />
											<Text text="{email_address}" />
											<!--<Text text="{Width} x {Depth} x {Height} {DimUnit}" />-->
										</cells>
									</ColumnListItem>
								</items>
							</Table>
					</content>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>




