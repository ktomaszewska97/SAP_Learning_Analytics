<mvc:View controllerName="test.Courses1.controller.dashboard" 
xmlns:mvc="sap.ui.core.mvc" 
xmlns:fb="sap.ui.comp.filterbar"
xmlns:l="sap.ui.layout"
xmlns:f="sap.ui.layout.form"
xmlns:core="sap.ui.core"
xmlns:u="sap.uxap"
displayBlock="true" 
xmlns="sap.m"
xmlns:m="sap.m"
>
	
	<Shell id="shell">
		<App id="app" class="myApp">
			<pages>
				<!--navigation bar-->
				
				<Page id="page" title="Dashboard" class="sapMShellGlobalOuterBackground sapUiContentPadding sapUiResponsivePadding--header 
				sapUiResponsivePadding--subHeader sapUiResponsivePadding--content sapUiResponsivePadding--footer"
				showNavButton="false"
				>
	
					<!--menu button-->
					
					<headerContent>
						<!--logo added-->
						<core:Icon src="sap-icon://customfont/cool" size="20px"></core:Icon>
						<HBox>
						<!--menu button-->
						<MenuButton text="Menu">
							<menu>
									<Menu>
									<MenuItem text="Dashboard" press="onPressDashboard"></MenuItem>
									<MenuItem text="Learning History" press="onPressHistory" />
									<MenuItem text="People Overview" press="onPressPeople"/>
									
									<MenuItem text="Courses Overview" press="onPressCourses" />
									<MenuItem text="Test Single Course" press="onPressSingleCourse"/>
									<MenuItem text="Test Single Person" press="onPressSinglePerson"/>
									
								</Menu>
							</menu>
						</MenuButton>
						</HBox>
						
					</headerContent>
					
					
					
					<content>
					<!--subtitle-->
					<Title level="H2" text="Welcome Back, Jack Done!" />
				
					
					
					<!--filter apply	-->
					<l:VerticalLayout width="100%">
						<!--<Label text="Filters"/>-->
						<fb:FilterBar reset="onReset" search="onSearch" showRestoreButton="true" showClearButton="true" title="Filters:">
							
							<fb:filterGroupItems>
								
								<!--company selection-->
								<fb:FilterGroupItem groupName="__$INTERNAL$" name="Company" label="Company" visibleInFilterBar="true">
									<fb:control>
										<ComboBox type="Text">
											<items>
												<core:Item key="udemy" text="Udemy"/>
												<core:Item key="litmos" text="Litmos"/>
												
											</items>
										</ComboBox>
									</fb:control>
								</fb:FilterGroupItem>
								
								<!--Business Unit-->
								<fb:FilterGroupItem groupName="__$INTERNAL$" name="bu" label="Business Unit" visibleInFilterBar="true">
									<fb:control>
										<ComboBox type="Text">
											<items>
												<core:Item key="marketing" text="Marketing"/>
												<core:Item key="hr" text="HR"/>
												<core:Item key="it" text="IT"/>
											</items>
										</ComboBox>
									
								    </fb:control>
								</fb:FilterGroupItem>
								
								<!--team selection-->
								<fb:FilterGroupItem groupName="G1" groupTitle="Group1" name="team" label="Team" visibleInFilterBar="true">
									<fb:control>
										<ComboBox type="Text">
											<items>
												<core:Item key="t1" text="team 1"/>
												<core:Item key="t2" text="team 2"/>
												<core:Item key="t3" text="team 3"/>
											</items>
										</ComboBox>
					                </fb:control>
				                </fb:FilterGroupItem>
				                
				                <!--date-->
				                <fb:FilterGroupItem groupName="G1" groupTitle="Group1" name="date" label="Date Range"  visibleInFilterBar="true">
									<fb:control>
										<!--date range selection-->
									<Label labelFor="DRS2"/>
							            <DateRangeSelection id="date" change="handleChange"/>
					                </fb:control>
				                </fb:FilterGroupItem>
								
							</fb:filterGroupItems>
						</fb:FilterBar>
						
					</l:VerticalLayout>
					
					<!--indices-->
					<l:Grid containerQuery="true" class="sapUiSmallMarginTop">
						<TileContent footer="Total num. of users"  class="sapUiSmallMargin">
							<NumericContent value="512" icon="sap-icon://customer" />
						</TileContent>
						<TileContent footer="Total num. of courses" class="sapUiSmallMargin">
							<NumericContent value="35" icon="sap-icon://e-learning" />
						</TileContent>
						<TileContent footer="Users never logged in" class="sapUiSmallMargin">
							<NumericContent value="17" icon="sap-icon://negative" />
						</TileContent>
					
						
					</l:Grid>
					
					<!--sections-->
					<u:ObjectPageLayout id="ObjectPageLayout" upperCaseAnchorBar="false">
					<u:headerTitle>
						<u:ObjectPageHeader objectTitle="Statistics Visulization">
						</u:ObjectPageHeader>
					</u:headerTitle>
					
					<u:headerContent>
						<m:ObjectAttribute title="" text="charts"/>
					</u:headerContent>
					
					<u:sections>
						<u:ObjectPageSection titleUppercase="false" title="Important KPIs">
							
						<u:subSections>
								<u:ObjectPageSubSection title="TOP Users Global" titleUppercase="false">
									<u:blocks>
									<m:ObjectAttribute title="" text="chart"/>	
									<!--	<blockcolor:BlockBlueT1 id="bbt1"/>-->
									</u:blocks>
								</u:ObjectPageSubSection>
								
								<u:ObjectPageSubSection title="TOP Courses Global" titleUppercase="false">
									<u:blocks>
									<!--	<blockcolor:BlockBlueT2 id="bbt2"/>-->
									<m:ObjectAttribute title="" text="chart"/>
									</u:blocks>
								</u:ObjectPageSubSection>
						</u:subSections>
						
						</u:ObjectPageSection>
						
						<u:ObjectPageSection titleUppercase="false" title="Grafik 2">
							
						</u:ObjectPageSection>
						
						
						<u:ObjectPageSection titleUppercase="false" title="avg. Time spent on learning Global">
							<u:subSections>
								<u:ObjectPageSubSection titleUppercase="false">
									<u:blocks>
									<!--<blockcolor:BlockBlueT3 id="bbt3"/>-->
									<m:ObjectAttribute title="" text="chart"/>
									</u:blocks>
							    </u:ObjectPageSubSection>
							</u:subSections>
						</u:ObjectPageSection>
					</u:sections>
				</u:ObjectPageLayout>
					
					
						
					</content>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>

